<Page x:Class="QuickTix.Desktop.Views.Pages.ClientsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:QuickTix.Desktop.Views.Pages"
      mc:Ignorable="d"
      Title="Clientes">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>

        <!-- ============================================================ -->
        <!-- Izquierda: Clientes -->
        <!-- ============================================================ -->
        <GroupBox Header="Clientes" Grid.Column="0" Margin="0,0,10,0">
            <DockPanel Margin="10">

                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
                    <Button Content="Añadir Cliente"
                            Command="{Binding OpenClientFlyoutCommand}"
                            Width="150" Margin="0,0,10,0"/>

                    <Button Content="Eliminar seleccionado"
                            Command="{Binding DeleteCommand}"
                            Margin="0,0,10,0"
                            CommandParameter="{Binding SelectedItem.Id}"
                            IsEnabled="{Binding SelectedItem, Converter={StaticResource NullToBoolConverter}}" />

                    <Button Content="Editar seleccionado"
                            Command="{Binding EditClientCommand}"
                            IsEnabled="{Binding SelectedItem, Converter={StaticResource NullToBoolConverter}}"
                            Width="150" Margin="0,0,10,0"/>
                </StackPanel>

                <ListView ItemsSource="{Binding Items}"
                          SelectedItem="{Binding SelectedItem}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="60"/>
                            <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Name}" Width="220"/>
                            <GridViewColumn Header="Teléfono" DisplayMemberBinding="{Binding PhoneNumber}" Width="200"/>
                        </GridView>
                    </ListView.View>
                </ListView>

            </DockPanel>
        </GroupBox>

        <!-- ============================================================ -->
        <!-- Derecha: Detalle del cliente (Abonos/Entradas/Ventas) -->
        <!-- ============================================================ -->
        <GroupBox Header="Detalle del cliente" Grid.Column="1">
            <DockPanel Margin="10">

                <!-- Cabecera: datos del cliente seleccionado -->
                <Border DockPanel.Dock="Top"
        Padding="10"
        Margin="0,0,0,10"
        Background="#0F000000"
        CornerRadius="6">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Título / estado -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="{Binding SelectedItem.Name}"
                       FontWeight="Bold"
                       FontSize="16"/>

                            <TextBlock Text="{Binding SelectedItem.Email}"
                       Opacity="0.8"
                       Margin="0,2,0,0"/>

                            <!-- Mensaje cuando no hay selección -->
                            <TextBlock Text="Seleccione un cliente para ver sus abonos y entradas."
                       Opacity="0.6"
                       Margin="0,6,0,0"
                       Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- Detalle (Label:Value) -->
                        <Grid Grid.Row="1" Margin="0,10,0,0"
              Visibility="{Binding SelectedItem, Converter={StaticResource NullToCollapsedVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Fila 0 -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" FontWeight="SemiBold" Margin="0,0,10,6"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedItem.Id}" Margin="0,0,20,6"/>

                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Teléfono:" FontWeight="SemiBold" Margin="0,0,10,6"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding SelectedItem.PhoneNumber}" Margin="0,0,0,6"/>

                            <!-- Fila 1 -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="NIF:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedItem.Nif}" Margin="0,0,20,0"/>

                            <!-- Si no quieres repetir Email arriba, puedes sustituir este campo por otro -->
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Email:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding SelectedItem.Email}"/>
                        </Grid>
                    </Grid>
                </Border>



                <!-- Pestañas -->
                <TabControl IsEnabled="{Binding SelectedItem, Converter={StaticResource NullToBoolConverter}}">
                    <!-- Abonos -->
                    <TabItem Header="Abonos">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="0.5*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Button Content="Vender abono"
                                        Command="{Binding OpenSubscriptionFlyoutCommand}"
                                        Width="140" Margin="0,0,10,0"/>

                                <Button Content="Cancelar abono"
        Command="{Binding CancelSubscriptionCommand}"
        Width="140" Margin="0,0,10,0"
        IsEnabled="{Binding SubscriptionsVM.SelectedItem, Converter={StaticResource NullToBoolConverter}}" />

                            </StackPanel>

                            <ListView Grid.Row="1"
                                      ItemsSource="{Binding SubscriptionsVM.Items}"
                                      SelectedItem="{Binding SubscriptionsVM.SelectedItem}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="60"/>
                                        <GridViewColumn Header="Categoría" DisplayMemberBinding="{Binding Category}" Width="180"/>
                                        <GridViewColumn Header="Duración" DisplayMemberBinding="{Binding Duration}" Width="120"/>
                                        <GridViewColumn Header="Inicio" DisplayMemberBinding="{Binding StartDate}" Width="140"/>
                                        <GridViewColumn Header="Fin" DisplayMemberBinding="{Binding EndDate}" Width="140"/>
                                        <GridViewColumn Header="Precio" DisplayMemberBinding="{Binding Price}" Width="100"/>
                                        <GridViewColumn Header="Estado" DisplayMemberBinding="{Binding Status}" Width="120"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </TabItem>

                    <!-- Entradas (placeholder) -->
                    <TabItem Header="Entradas">
                        <Grid>
                            <TextBlock Text="Pendiente de implementar"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Opacity="0.7"/>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Usuarios relacionados">
                        <Grid>
                            <TextBlock Text="Pendiente de implementar"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Opacity="0.7"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </DockPanel>
        </GroupBox>

        <!-- ============================================================ -->
        <!-- Popups -->
        <!-- ============================================================ -->

        <!-- Popup Cliente -->
        <Popup IsOpen="{Binding IsClientFlyoutOpen}" StaysOpen="False" Placement="Center">
            <Grid Background="#80000080">
                <Border Background="White" Padding="20" Width="420" MinHeight="300" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="{Binding IsEditingClient,
                                  Converter={StaticResource BoolToTextConverter},
                                  ConverterParameter='Editar Cliente|Añadir Cliente'}"
                                   FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                        <Label Content="Nombre:"/>
                        <TextBox Text="{Binding ActiveClientForm.Name, UpdateSourceTrigger=PropertyChanged}" Width="280"/>

                        <Label Content="NIF:" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding ActiveClientForm.Nif, UpdateSourceTrigger=PropertyChanged}" Width="280"/>

                        <Label Content="Email:" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding ActiveClientForm.Email, UpdateSourceTrigger=PropertyChanged}" Width="280"/>

                        <Label Content="Teléfono:" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding ActiveClientForm.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Width="280"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Cancelar" Command="{Binding CloseClientFlyoutCommand}" Width="90" Margin="0,0,10,0"/>
                            <Button Content="Guardar" Command="{Binding SaveClientCommand}" Width="90"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Popup>

        <!-- Popup Abono -->
        <Popup IsOpen="{Binding IsSubscriptionFlyoutOpen}" StaysOpen="False" Placement="Center">
            <Grid Background="#80000080">
                <Border Background="White" Padding="20" Width="460" MinHeight="360" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="{Binding IsEditingSubscription,
                          Converter={StaticResource BoolToTextConverter},
                          ConverterParameter='Editar abono|Vender abono'}"
                                   FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding SelectedItem.Name}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        
                        
                        <Label Content="Recinto:"/>
                        <ComboBox ItemsSource="{Binding SubscriptionsVM.Venues}"
          SelectedValue="{Binding ActiveSubscriptionForm.VenueId, Mode=TwoWay}"
          SelectedValuePath="Id"
          DisplayMemberPath="Name"
          Width="300"/>


                        <Label Content="Categoría:"/>
                        <ComboBox ItemsSource="{Binding SubscriptionsVM.Categories}"
          SelectedItem="{Binding ActiveSubscriptionForm.Category, Mode=TwoWay}"
          Width="300"/>

                        <Label Content="Duración:" Margin="0,10,0,0"/>
                        <ComboBox ItemsSource="{Binding SubscriptionsVM.Durations}"
          SelectedItem="{Binding ActiveSubscriptionForm.Duration, Mode=TwoWay}"
          Width="300"/>

                        <Label Content="Fecha de inicio:" Margin="0,10,0,0"/>
                        <DatePicker SelectedDate="{Binding ActiveSubscriptionForm.StartDate, Mode=TwoWay}"
            Width="200"/>

                        <Label Content="Fecha de fin (calculada):" Margin="0,10,0,0"/>
                        <DatePicker SelectedDate="{Binding ActiveSubscriptionForm.EndDate}"
            Width="200"
            IsEnabled="False"/>

                        <Label Content="Precio (calculado):" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding ActiveSubscriptionForm.Price}"
         Width="120"
         IsReadOnly="True"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Cancelar" Command="{Binding CloseSubscriptionFlyoutCommand}" Width="90" Margin="0,0,10,0"/>
                            <Button Content="Guardar" Command="{Binding SaveSubscriptionCommand}" Width="90"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Popup>

    </Grid>
</Page>
