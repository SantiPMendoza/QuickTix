<Page x:Class="QuickTix.Desktop.Views.Pages.UsersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:QuickTix.Desktop.Views.Pages"
      mc:Ignorable="d"
      Title="Administradores y Gestores">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ============================================================ -->
        <!-- 🔹 Administradores -->
        <!-- ============================================================ -->
        <GroupBox Header="Administradores" Grid.Row="0">
            <DockPanel Margin="10">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
                    <Button Content="Añadir Administrador"
                            Command="{Binding OpenAdminFlyoutCommand}"
                            Width="180" Margin="0,0,10,0"/>

                    <Button Content="Eliminar seleccionado"
                            Command="{Binding AdminsVM.DeleteCommand}"
                            Margin="0,0,10,0"
                            CommandParameter="{Binding AdminsVM.SelectedItem.Id}"
                            IsEnabled="{Binding AdminsVM.SelectedItem, Converter={StaticResource NullToBoolConverter}}" />
                    <Button Content="Editar seleccionado"
        Command="{Binding EditAdminCommand}"
        IsEnabled="{Binding AdminsVM.SelectedItem, Converter={StaticResource NullToBoolConverter}}"
        Width="150" Margin="0,0,10,0"/>



                </StackPanel>

                <ListView ItemsSource="{Binding AdminsVM.Items}"
                          SelectedItem="{Binding AdminsVM.SelectedItem}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="60"/>
                            <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Name}" Width="200"/>
                            <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="250"/>
                            <GridViewColumn Header="NIF" DisplayMemberBinding="{Binding Nif}" Width="200"/>
                            <GridViewColumn Header="Teléfono" DisplayMemberBinding="{Binding PhoneNumber}" Width="200"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </GroupBox>

        <!-- ============================================================ -->
        <!-- 🔹 Gestores -->
        <!-- ============================================================ -->
        <GroupBox Header="Gestores" Grid.Row="2">
            <DockPanel Margin="10">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
                    <Button Content="Añadir Gestor"
                            Command="{Binding OpenManagerFlyoutCommand}"
                            Width="150" Margin="15,0,10,0"/>

                    <Button Content="Eliminar seleccionado"
                            Command="{Binding ManagersVM.DeleteCommand}"
                            Margin="0,0,10,0"
                            CommandParameter="{Binding ManagersVM.SelectedItem.Id}"
                            IsEnabled="{Binding ManagersVM.SelectedItem, Converter={StaticResource NullToBoolConverter}}" />

                    <Button Content="Editar seleccionado"
                            Command="{Binding EditManagerCommand}"
                            IsEnabled="{Binding ManagersVM.SelectedItem, Converter={StaticResource NullToBoolConverter}}"
                            Width="150" Margin="0,0,10,0"/>



                </StackPanel>

                <ListView ItemsSource="{Binding ManagersVM.Items}"
                          SelectedItem="{Binding ManagersVM.SelectedItem}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="60"/>
                            <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Name}" Width="200"/>
                            <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="250"/>
                            <GridViewColumn Header="Recinto" DisplayMemberBinding="{Binding VenueName}" Width="200"/>
                            <GridViewColumn Header="NIF" DisplayMemberBinding="{Binding Nif}" Width="200"/>
                            <GridViewColumn Header="Teléfono" DisplayMemberBinding="{Binding PhoneNumber}" Width="200"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </GroupBox>

        <!-- ============================================================ -->
        <!-- 🔹 Flyout Administrador -->
        <!-- ============================================================ -->
        <Popup IsOpen="{Binding IsAdminFlyoutOpen}" StaysOpen="False" Placement="Center">
            <Grid Background="#80000080">
                <Border Background="White" Padding="20" Width="400" MinHeight="260" CornerRadius="5">
                    <StackPanel>

                        <!-- Título dinámico -->
                        <TextBlock Text="{Binding IsEditingAdmin, 
                                  Converter={StaticResource BoolToTextConverter},
                                  ConverterParameter='Editar Administrador|Añadir Administrador'}"
                           FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                        <!-- Campos -->
                        <Label Content="Nombre:"/>
                        <TextBox Text="{Binding ActiveAdminForm.Name, UpdateSourceTrigger=PropertyChanged}" Width="250"/>

                        <Label Content="NIF:" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding ActiveAdminForm.Nif, UpdateSourceTrigger=PropertyChanged}" Width="250"/>

                        <Label Content="Email:" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding ActiveAdminForm.Email, UpdateSourceTrigger=PropertyChanged}" Width="250"/>

                        <Label Content="Teléfono:" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding ActiveAdminForm.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Width="250"/>

                        <!-- Botones -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Cancelar" Command="{Binding CloseAdminFlyoutCommand}" Width="90" Margin="0,0,10,0"/>
                            <Button Content="Guardar"  Command="{Binding SaveAdminCommand}"  Width="90"/>
                        </StackPanel>

                    </StackPanel>
                </Border>
            </Grid>
        </Popup>


        <!-- ============================================================ -->
        <!-- 🔹 Flyout Gestor -->
        <!-- ============================================================ -->
        <Popup IsOpen="{Binding IsManagerFlyoutOpen}" StaysOpen="False" Placement="Center">
            <Grid Background="#80000080">
                <Border Background="White" Padding="20" Width="400" MinHeight="320" CornerRadius="5">
                    <StackPanel>

                        <!-- Título dinámico -->
                        <TextBlock Text="{Binding IsEditingManager, 
                                  Converter={StaticResource BoolToTextConverter},
                                  ConverterParameter='Editar Gestor|Añadir Gestor'}"
                           FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                        <!-- Campos -->
                        <Label Content="Nombre:"/>
                        <TextBox Text="{Binding ActiveManagerForm.Name, UpdateSourceTrigger=PropertyChanged}" Width="250"/>

                        <Label Content="NIF:" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding ActiveManagerForm.Nif, UpdateSourceTrigger=PropertyChanged}" Width="250"/>

                        <Label Content="Email:" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding ActiveManagerForm.Email, UpdateSourceTrigger=PropertyChanged}" Width="250"/>

                        <Label Content="Teléfono:" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding ActiveManagerForm.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Width="250"/>

                        <Label Content="Recinto:" Margin="0,10,0,0"/>
                        <ComboBox
                    ItemsSource="{Binding ManagersVM.Venues}"
                    SelectedValue="{Binding ActiveManagerForm.VenueId, Mode=TwoWay}"
                    SelectedValuePath="Id"
                    DisplayMemberPath="Name"
                    Width="250"/>

                        <!-- Botones -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Cancelar" Command="{Binding CloseManagerFlyoutCommand}" Width="90" Margin="0,0,10,0"/>
                            <Button Content="Guardar"  Command="{Binding SaveManagerCommand}"  Width="90"/>
                        </StackPanel>

                    </StackPanel>
                </Border>
            </Grid>
        </Popup>


    </Grid>
</Page>
