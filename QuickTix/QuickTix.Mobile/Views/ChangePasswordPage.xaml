<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickTix.Mobile.Views.ChangePasswordPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Cambiar contraseña">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="14">

            <Label
                Text="Es tu primer inicio de sesión, por favor cambia la contraseña."
                FontAttributes="Bold"
                FontSize="16" />

            <Label
                Text="Contraseña actual"
                FontAttributes="Bold" />

            <Entry
                Text="{Binding CurrentPassword}"
                IsPassword="True"
                Placeholder="Introduce tu contraseña actual" />

            <Label
                Text="Nueva contraseña"
                FontAttributes="Bold" />

            <Entry
                Text="{Binding NewPassword}"
                IsPassword="True"
                Placeholder="Introduce la nueva contraseña" />

            <Label
                Text="Repite la nueva contraseña"
                FontAttributes="Bold" />

            <Entry
                Text="{Binding ConfirmNewPassword}"
                IsPassword="True"
                Placeholder="Repite la nueva contraseña" />

            <Button
                Text="Aceptar"
                Command="{Binding ConfirmChangePasswordCommand}"
                IsEnabled="{Binding IsSubmitEnabled}" />

            <ActivityIndicator
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
