<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickTix.Mobile.Views.TicketsPage"
             Title="Venta de tickets">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <Label Text="Venta de tickets"
                   FontSize="22"
                   FontAttributes="Bold" />

            <Frame Padding="12">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Datos de sesión" FontAttributes="Bold" />
                    <Label Text="{Binding SessionInfo}" FontSize="12" />
                </VerticalStackLayout>
            </Frame>

            <!-- Nueva línea -->
            <Frame Padding="12">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Nueva línea" FontAttributes="Bold" />

                    <Picker Title="Tipo de ticket"
                            ItemsSource="{Binding TicketTypes}"
                            SelectedItem="{Binding NewLineTicketType}" />

                    <Picker Title="Contexto"
                            ItemsSource="{Binding TicketContexts}"
                            SelectedItem="{Binding NewLineTicketContext}" />

                    <HorizontalStackLayout Spacing="12">
                        <Label Text="Cantidad" VerticalOptions="Center" />
                        <Entry Text="{Binding NewLineQuantityText}"
                               Keyboard="Numeric"
                               WidthRequest="120" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="12">
                        <Label Text="Precio unitario (opcional)" VerticalOptions="Center" />
                        <Entry Text="{Binding NewLineUnitPriceText}"
                               Keyboard="Numeric"
                               WidthRequest="160"
                               Placeholder="Ej: 12,50" />
                    </HorizontalStackLayout>

                    <Button Text="Añadir línea"
                            Command="{Binding AddLineCommand}"
                            IsEnabled="{Binding CanAddLine}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Líneas añadidas -->
            <Frame Padding="12">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Líneas de la venta" FontAttributes="Bold" />
                    <Label Text="{Binding LinesSummary}" FontSize="12" TextColor="Gray" />

                    <CollectionView ItemsSource="{Binding Lines}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" Padding="6">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding DisplayTitle}" FontAttributes="Bold" />
                                    <Button Grid.Row="0" Grid.Column="1"
                                            Text="Quitar"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveLineCommand}"
                                            CommandParameter="{Binding .}" />

                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="{Binding DisplayInfo}" FontSize="12" TextColor="Gray" />

                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="{Binding DisplayTotal}" FontSize="12" TextColor="Gray" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- ClientId: obligatorio si alguna línea es InvitadoAbonado -->
            <Frame Padding="12" IsVisible="{Binding RequiresClientId}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Invitado abonado" FontAttributes="Bold" />
                    <Entry Placeholder="ClientId (obligatorio si alguna línea es InvitadoAbonado)"
                           Text="{Binding ClientIdText}"
                           Keyboard="Numeric" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Vender (batch)"
                    Command="{Binding SellBatchCommand}"
                    IsEnabled="{Binding CanSell}" />

            <Button Text="Limpiar"
                    Command="{Binding ResetCommand}" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}" />

            <Label Text="{Binding StatusMessage}"
                   FontSize="12"
                   TextColor="Gray" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
